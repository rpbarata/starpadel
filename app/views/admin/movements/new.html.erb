<% title = admin.t("titles.new", default: "New %{model_name}") %>

<% content_for(:title, title) %>
<% breadcrumb(title) %>

<% toolbar(:primary) do |t| %>
  <%= t.save_or_dismiss(:create) %>
<% end %>

<%= trestle_form_for instance, url: admin.path(:create), method: :post do |f| %>
  <%= render partial: "form", layout: dialog_request? ? "dialog" : "layout" %>
<% end %>

<%= javascript_tag do %>
  $('#movement_from_credited_lesson').click(function (e) {
    if (e.currentTarget.checked) {
      $('#movement_lesson_row')[0].style.display = "block";
      $('#movement_description_row')[0].style.display = "none";
    } else {
      $('#movement_lesson_row')[0].style.display = "none";
      $('#movement_description_row')[0].style.display = "block";
    }
  })
<% end %>

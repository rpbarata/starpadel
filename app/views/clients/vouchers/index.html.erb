<%= stylesheet_link_tag "creditedlessons.css" %>

<h1 class="title">Vouchers</h1>

<div class="mb-3" data-controller="vouchers">
  <div class="table-responsive table-mobile">
    <table class="table table-hover">
      <tr class="thead-dark">
        <th>Código</th>
        <th>Valor</th>
        <th>Valor Utilizado</th>
        <th>Valor Disponível</th>
        <th>Criado em</th>
        <th>Validade</th>
      </tr>
      <% @vouchers.each do |voucher| %>
        <tr data-href="<%= clients_voucher_movements_path(voucher) %>" data-action="click->vouchers#openHref" style="cursor: pointer;" class="pointer">
          <td><%= voucher.code %></td>
          <td><%= number_to_currency(voucher.value) %></td>
          <td><%= number_to_currency(voucher.value_used) %></td>
          <td><%= number_to_currency(voucher.value_remaining) %></td>
          <td><%= l(voucher.created_at, format: :short) %></td>
          <td><%= voucher.validity.present? ? l(voucher.validity, format: :short) : "Sem Validade" %></td>
        </tr>
      <% end %>
    </table>
  </div>

  <div class="list-group list-mobile">
    <% @vouchers.each do |voucher| %>
      <div data-href="<%= clients_voucher_movements_path(voucher) %>" data-action="click->vouchers#openHref" style="cursor: pointer;" class="list-group-item list-group-item-action flex-column align-items-start">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1 title"><%= voucher.code %></h5>
          <small><%= number_to_currency(voucher.value) %></small>
        </div>
        <p class="mb-1">Atribuído a: <%= voucher.created_at.strftime("%d/%m/%Y") %></p>
        <p class="mb-1">Utilizado: <%= number_to_currency(voucher.value_used) %></p>
        <p class="mb-1">Disponível: <%= number_to_currency(voucher.value_remaining) %></p>
        <p class="mb-1">Validade: <%= voucher.validity.present? ? l(voucher.validity, format: :short) : "Sem Validade" %></p>
      </div>
    <% end %>
  </div>

</div>

<%= paginate @vouchers %>
<% class_name = instance.class.name.underscore %>

<% if current_user.super_admin? || current_user.secretariat_admin? %>
  <div class="btn-toolbar primary-toolbar d-flex justify-content-end" role="toolbar">
    <%= link_to "Editar", edit_clients_admin_path(instance), class: "btn btn-warning" %>
  </div>
<% end %>

<div class="row">
  <div class="col">
    <%= render partial: 'trestle/resource/show_field', locals: { class_name: class_name, field: 'name', value: instance.name } %>
  </div>
</div>

<div class="row">
  <div class="col-6">
    <%= render partial: 'trestle/resource/show_field', locals: { class_name: class_name, field: 'email', value: instance.email } %>
  </div>

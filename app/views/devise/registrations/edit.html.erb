<h2 class="title">Editar Informações</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "container container-form" }) do |f| %>
  <div class="alert alert-warning" role="alert">Alguns campos podem encontrar-se bloqueadas. Por favor, dirija-se a um balcão se pretender alterar essa informação.</div>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col d-flex justify-content-center align-self-center">
      <div data-controller="client">
        <%= image_tag(avatar(current_client), class: "avatar", data: { target: "client.output" }) %>
        <div class="form-group">
          <%= f.file_field :avatar, class: "form-control-file", data: { action: "client#readURL" } %>
        </div>
      </div>

    </div>
  </div>

  <div class="row">
    <div class="col form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", disabled: true %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-sm-6 form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control", disabled: true %>
    </div>
    <div class="col-12 col-sm-6 form-group">
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number, class: "form-control", disabled: true %>
    </div>
  </div>

  <div class="row">
    <div class="col form-group">
      <%= f.label :address %>
      <%= f.text_field :address, class: "form-control", disabled: true %>
    </div>
  </div>

  <div class="row">
    <div class="col col-12 col-sm-6">
      <div class="row">
        <div class="col form-group">
          <%= f.label :member_id %>
          <%= f.text_field :member_id, class: "form-control", disabled: true %>
        </div>
      </div>
      <div class="row">
        <div class="col form-group">
          <div class="form-check">
            <%= f.check_box :is_master_member, class: "form-check-input", disabled: true %>
            <%= f.label :is_master_member, class: "form-check-label" %>
          </div>
        </div>
      </div>
    </div>

    <div class="col col-12 col-sm-6 form-group">
      <%= f.label :fpp_id %>
      <%= f.text_field :fpp_id, class: "form-control", disabled: true %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-sm-6 col-md-4 form-group">
      <%= f.label :identification_number %>
      <%= f.text_field :identification_number, class: "form-control", disabled: true %>
    </div>
    <div class="col-12 col-sm-6 col-md-4 form-group">
      <%= f.label :nif %>
      <%= f.text_field :nif, class: "form-control", disabled: true %>
    </div>
    <div class="col-12 col-sm-12 col-md-4 form-group">
      <%= f.label :birth_date %>
      <%= f.date_field :birth_date, class: "form-control", disabled: true %>
    </div>
  </div>

  <hr>


  <div class="row">
    <div class="col col-12 col-sm-6 form-group">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <small class="form-text text-muted"><i>(deixe em branco se não quiser mudar)</i></small>
      <% if @minimum_password_length %>
        <small class="form-text text-muted"><em><%= @minimum_password_length %> caracteres mínimos</em></small>
      <% end %>
    </div>

    <div class="col col-12 col-sm-6 form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <hr>

  <div class="form-group">
    <%= f.label :current_password %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
    <small class="form-text text-muted"><i>(precisamos de sua senha atual para confirmar as alterações)</i></small>
  </div>

  <div class="actions d-flex justify-content-center">
    <%= f.submit "Guardar", class: "button" %>
  </div>
<% end %>
